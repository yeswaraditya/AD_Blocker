{
    "name": "AD_Blocker",
    "version": "1.0.0",
    "manifest_version": 3,
    "action":{
         "default_popup": " popup.html",
         "default_icon": "logo.png"
    },
    
    "permissions": [
        "declarativeNetRequest",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
        
    ],
    "icons":
    {
        "128": "logo.png"
    },


    "declarative_net_request":
    {
        "rule_resources":
        [
        {
             "id": "request_1",
             "enabled": true,
             "path": "rules.json"
        }
    ]
    }
}
